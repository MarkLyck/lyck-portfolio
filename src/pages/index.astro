---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Mark Lyck">
  <main>
    <div class="content">
      <h1>Mark Lyck</h1>
      <h2>
        <span
          >DOM interactive after: <b><span id="dom-interactive"></span>ms</b>
        </span>
        <br />
        <span
          >Full request to render time: <b><span id="dom-complete"></span>ms</b>
        </span>
      </h2>
    </div>
    <script>
      window.addEventListener("load", checkNavigationTiming);

      function checkNavigationTiming() {
        var navigationTiming: any =
          performance.getEntriesByType("navigation")[0];
        if (navigationTiming.loadEventEnd) {
          document.getElementById("dom-interactive")!.innerHTML =
            navigationTiming.domInteractive.toFixed(2);
          document.getElementById("dom-complete")!.innerHTML =
            navigationTiming.domComplete.toFixed(2);
        } else setTimeout(checkNavigationTiming, 0);
      }
    </script>
  </main>
</Layout>

<style>
  main {
    height: 100%;
  }
  main::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/bg.svg");
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 0.2;
    z-index: 0;
  }
  .content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  h2 {
    text-align: center;
    font-weight: 400;
    line-height: 2.5rem;
  }
  h1 {
    font-size: 4rem;
    text-align: center;
    background: linear-gradient(
        180deg,
        rgba(2, 88, 254, 0.05) 0,
        rgba(2, 88, 254, 0.15)
      )
      #fff;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }
  b {
    font-weight: 900;
    color: #0170f3;
  }
</style>
