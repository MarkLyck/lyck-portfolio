<style>
  main {
    height: 100%;
  }
  main::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/bg.svg');
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 0.2;
    z-index: 0;
  }
</style>
