<div
  id="benchmark"
  class="w-96 border-2 flex flex-col-reverse rounded-lg border-neutral-800 p-6 dark:bg-neutral-900 cursor-pointer hover:scale-105 transition-all"
>
  <span class="font-light"
    >This application loaded in: <b
      ><span id="response-end" class="font-extrabold text-pink-600"></span>
      ms âš¡</b
    >
  </span>
</div>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  #benchmark {
    animation: fade-in;
    animation-duration: 5s;
  }
</style>

<script>
  window.addEventListener('load', checkNavigationTiming)

  function checkNavigationTiming() {
    var navigationTiming: any = performance.getEntriesByType('navigation')[0]
    if (navigationTiming.loadEventEnd) {
      document.getElementById('response-end')!.innerHTML =
        navigationTiming.responseEnd.toFixed(2)
      document.getElementById('dom-interactive')!.innerHTML =
        navigationTiming.domInteractive.toFixed(2)
      document.getElementById('dom-complete')!.innerHTML =
        navigationTiming.domComplete.toFixed(2)
    } else setTimeout(checkNavigationTiming, 0)
  }
</script>
